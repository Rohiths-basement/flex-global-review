// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Listing {
  id            String   @id @default(cuid())
  name          String
  slug          String   @unique
  address       String?
  hostawayMapId Int?
  googlePlaceId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  reviews       Review[]
}

model Review {
  id           String   @id // "<source>:<sourceReviewId>"
  source       String   // 'hostaway' | 'google'
  listingId    String?
  listing      Listing? @relation(fields: [listingId], references: [id])
  listingMapId Int?     // For Hostaway reviews mapping
  channel      String?
  type         String?
  rating       Float?
  ratingRaw    Float?
  categories   Json?
  text         String?
  languageCode String?
  authorName   String?
  submittedAt  DateTime?
  approved     Boolean  @default(false)
  pinned       Boolean  @default(false)
  sourceMeta   Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ReviewCache {
  key        String   @id // e.g., "google:place:<placeId>"
  payload    Json
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
